<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Style TargetType="Border" x:Key="UpLeftBorder">
        <Setter Property="BorderThickness" Value="1, 1, 0, 0"></Setter>
        <Setter Property="BorderBrush" Value="Black"> </Setter>
    </Style>

    <Style TargetType="Border" x:Key="RightUpLeftBorder">
        <Setter Property="BorderThickness" Value="1, 1, 1, 0"></Setter>
        <Setter Property="BorderBrush" Value="Black"> </Setter>
    </Style>

    <Style TargetType="Border" x:Key="DownUpLeftBorder">
        <Setter Property="BorderThickness" Value="1, 1, 0, 1"></Setter>
        <Setter Property="BorderBrush" Value="Black"> </Setter>
    </Style>

    <Style TargetType="Border" x:Key="FourBorder">
        <Setter Property="BorderThickness" Value="1, 1, 1, 1"></Setter>
        <Setter Property="BorderBrush" Value="Black"> </Setter>
    </Style>

</ResourceDictionary>